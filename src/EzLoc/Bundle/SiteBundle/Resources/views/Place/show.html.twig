{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Place</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ entity.subtitle }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ entity.img }}</td>
            </tr>
            <tr>
                <th>Modalsubtitle</th>
                <td>{{ entity.modalSubtitle }}</td>
            </tr>
            <tr>
                <th>Modaldescription</th>
                <td>{{ entity.modalDescription }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('place') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('place_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
